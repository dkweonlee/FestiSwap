<p id="notice"><%= notice %></p>
<% if @ad.file_file_name %>
  <td><%= image_tag @ad.file.url %></td>
<% end %>

<p>
  <b>Title:</b>
  <h1><%= @ad.title %></h1>
</p>

<p>
  <b>Description:</b>
  <%= @ad.description %>
</p>

<% if current_user %>
  <% if current_user.id == @ad.user_id %>
  <%= link_to 'Edit', edit_event_ad_path(@event, @ad) %></td>
  <%= link_to 'Destroy', event_ad_path(@event, @ad), :confirm => 'Are you sure?', method: :delete %></td>
  <% end %>
<% end %>
<%= link_to 'Back', event_path(@event.id) %><br>

<% @comments.map do |comment| %>
  <%= comment.user.name %>: <%= comment.comment %> <%= link_to "Edit", edit_event_ad_comment_path(event_id: @event.id, ad_id: @ad.id, id: comment.id) %>, <%= link_to 'Delete',  event_ad_comment_path(event_id: @event.id, ad_id: @ad.id, id: comment.id),  method: :delete, data: { confirm: 'Are you sure?' } %><br>
<% end %><br><br>

<%= link_to 'Add Commment', new_event_ad_comment_path(ad_id: @ad.id) %>

